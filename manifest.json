{
  "version": "1.1.0",
  "manifest_version": 3,
  "name": "COMO-가상화폐 시세 비트코인(Bitcoin&Cryptocurrencies)",
  "description": "Upbit, Bithumb 거래소 암호화폐 시세 조회",
  "options_page": "src/pages/Options/index.html",
  "background": { "service_worker": "src/pages/Background/index.js" },
  "action": {
    "default_popup": "src/pages/Popup/index.html"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Q",
        "mac": "Ctrl+Q"
      },
      "description": "COMO"
    }
  },
  "icons": {
    "16": "/assets/img/defaultcomologo.png",
    "32": "/assets/img/defaultcomologo.png",
    "48": "/assets/img/defaultcomologo.png",
    "128": "/assets/img/defaultcomologo.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/pages/Content/index.js"],
      "css": ["src/pages/Content/content.styles.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["content.styles.css", "defaultcomologo.png"],
      "matches": []
    }
  ]
}
